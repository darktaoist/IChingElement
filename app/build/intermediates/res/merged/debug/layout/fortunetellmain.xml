<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" 
  android:orientation="vertical"
  android:gravity="center" 
  android:layout_gravity="center" 
  android:background="@drawable/main_page">

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_weight="6" android:id="@+id/middle"
		android:orientation="horizontal" android:layout_width="fill_parent"
		 android:layout_height="0dip" >
	</LinearLayout>
	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_weight="3" android:id="@+id/middle"
		android:orientation="horizontal" android:layout_width="fill_parent"
		 android:layout_height="0dip" >
		 <ImageView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_gravity="center_vertical"
			android:id="@+id/simple_on_x" android:layout_weight="6" />
			<ImageButton android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_gravity="center_vertical"
			android:id="@+id/simple_on" 
			android:background="#00000000" 
			android:layout_weight="6" android:src="@drawable/simple_on"/>
			<ImageView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_gravity="center_vertical"
			android:id="@+id/simple_on_x" android:layout_weight="1" />
			<ImageButton android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_gravity="center_vertical"
			android:id="@+id/forturn_on" 
			android:background="#00000000"
			android:layout_weight="6" android:src="@drawable/fortune_on"/>
			<ImageView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_gravity="center_vertical"
			android:id="@+id/simple_on_x" android:layout_weight="6" />
			<!-- <ImageButton android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_gravity="center_vertical"
			android:id="@+id/chemistry_on" 
			android:background="#00000000"
			android:layout_weight="6" android:src="@drawable/detail_on"/> -->
	</LinearLayout>
	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_weight="1" android:id="@+id/middle"
		android:orientation="horizontal" android:layout_width="fill_parent"
		 android:layout_height="0dip" >
	</LinearLayout>
	 
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_weight="3" android:id="@+id/middle"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="0dip" >
		<ImageView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_gravity="center_vertical"
			android:id="@+id/simple_on_x" android:layout_weight="6" />
			<ImageButton android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_gravity="center_vertical"
			android:id="@+id/harmony_on"
			android:background="#00000000"
			 android:layout_weight="6" android:src="@drawable/harmony_on"/>
			 <ImageView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_gravity="center_vertical"
			android:id="@+id/simple_on_x" android:layout_weight="1" />
			<ImageButton android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_gravity="center_vertical"
			android:id="@+id/help_on" 
			android:background="#00000000"
			android:layout_weight="6" android:src="@drawable/help_on"/>
			<ImageView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_gravity="center_vertical"
			android:id="@+id/simple_on_x" android:layout_weight="6" />
	</LinearLayout>
	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_weight="4" android:id="@+id/middle"
		android:orientation="horizontal" android:layout_width="fill_parent"
		 android:layout_height="0dip" >
	</LinearLayout>
</LinearLayout>
