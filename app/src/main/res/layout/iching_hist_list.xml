<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:orientation="vertical" android:layout_width="wrap_content"
 android:layout_height="wrap_content" 
>
	<LinearLayout android:orientation="horizontal"
				  android:layout_width="fill_parent"
				  android:layout_marginTop="5px"
				  android:layout_height="wrap_content">
  		<TextView android:id="@+id/iching_hist_list_title"
  			  android:layout_width="wrap_content"
  			  android:layout_height="wrap_content"
  			  android:layout_marginLeft="10px"
  			  style="@style/simple_result_style"/>
        <RatingBar android:id="@+id/iching_hist_list_accuracy"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_marginLeft="5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
			android:rating="3.0" />
		<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		  android:layout_width="fill_parent"
		  android:layout_height="wrap_content">			
			<ImageButton android:id="@+id/update"
					android:text="@string/iching_hist_list_update"
					android:layout_width="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_marginRight="70px"
				    android:layout_height="wrap_content"
				    android:background="#00000000"
					android:src="@drawable/button_modify"/>
			<ImageButton android:id="@+id/delete"
					android:text="@string/iching_hist_list_delete"
					android:layout_width="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_height="wrap_content"
					android:background="#00000000"
					android:src="@drawable/button_del"/>
		</RelativeLayout>				
	</LinearLayout>				
</LinearLayout>
 
